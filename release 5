  pass

for i in range(2):
  while i>=0:
    print("(1)añadir a base de datos/(2)sacar/(3)poner libros")
    f=int(input())
    if f==1:
      lol()
    if f==2 or f==3:
      reg=registrar_usuario()
      reg2=Usuarios.index(reg)
      if f==2:
          sacar_libros(reg)
      if f==3:
        devolver_libros(reg)
